@model Library.core.Model.TreatmentPlan

@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div>
    <h4>TreatmentPlan</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            Treatment
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Description
        </dd>
        <dt class="col-sm-2">
            Explanation Required
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ExplanationRequired
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Particularities)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Particularities)
        </dd>
        <dt class = "col-sm-2">
            Performed By
        </dt>
        <dd class = "col-sm-10">
            @Model.TreatmentPerformedBy.ApplicationUser.FirstName @Model.TreatmentPerformedBy.ApplicationUser.SurName
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TreatmentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TreatmentDate)
        </dd>
        <dt class = "col-sm-2">
            Treatments per week
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AmountOfTreatmentsPerWeek)
        </dd>
        <dt class="col-sm-2">
            Room
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PracticeRoom.Name)
        </dd>
        
    </dl>
</div>
<div>
    @if (User.HasClaim("UserType", "Employee") || User.HasClaim("UserType", "Student"))
    {
        @Html.ActionLink("Edit | ", "Edit", new { id = Model.Id })
    }
    <a href="javascript:history.go(-1)">Back</a>
</div>
