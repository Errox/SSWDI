@model Core.DomainModel.TreatmentPlan

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit treatmentplan</h1>

<hr />

<div class="card col-md-6">
    <div class="card-body">
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Treatments</label>
                <select class="form-control" asp-for="Type" asp-items="@(ViewBag.Treatments)"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
            <div class="form-group">
                <label asp-for="Particularities" class="control-label"></label>
                <input asp-for="Particularities" class="form-control" />
                <span asp-validation-for="Particularities" class="text-danger"></span>
                    </div>
                    <br />
            <div class="form-group">
                <label asp-for="TreatmentDate" class="control-label"></label>
                <input asp-for="TreatmentDate" class="form-control" />
                <span asp-validation-for="TreatmentDate" class="text-danger"></span>
                    </div>
                    <br />
            <div class="form-group">
                <label asp-for="AmountOfTreatmentsPerWeek" class="control-label"></label>
                <input asp-for="AmountOfTreatmentsPerWeek" class="form-control" />
                <span asp-validation-for="AmountOfTreatmentsPerWeek" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>

<div>
    <a href="javascript:history.go(-1)">Back</a>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
