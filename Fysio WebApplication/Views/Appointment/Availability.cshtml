@model Fysio_WebApplication.ViewModels.AvailabilityModel
@{
    ViewData["Title"] = "Create Availability";
}
<h1 class="text-center">@ViewData["Title"]</h1>

<hr />



<div class="card col-md-6">
    <div class="card-body">
        <form id="Availabilty" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.DateStart"></label>
                <input type="date" asp-for="@Model.DateStart" class="form-control" autocomplete="given-name" aria-required="true" />
                <span asp-validation-for="@Model.DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DateStop"></label>
                <input type="date" asp-for="@Model.DateStop" class="form-control" autocomplete="given-name" aria-required="true" />
                <span asp-validation-for="@Model.DateStop" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.DateTimeStart"></label>
                <input type="time" pattern="[0-9]{2}:[0-9]{2}" min="08:00" max="17:30" step="180000000000" asp-for="@Model.DateTimeStart" class="form-control" autocomplete="given-name" aria-required="true" />
                <span asp-validation-for="@Model.DateTimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DateTimeStop"></label>
                <input type="time" pattern="[0-9]{2}:[0-9]{2}" min="08:30" max="17:30" step="180000000000"  asp-for="@Model.DateTimeStop" class="form-control" autocomplete="given-name" aria-required="true" />
                <span asp-validation-for="@Model.DateTimeStop" class="text-danger"></span>
            </div>
        </div>
    </div>
    <hr/>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}