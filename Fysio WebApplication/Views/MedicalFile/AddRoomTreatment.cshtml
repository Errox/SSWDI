@model Core.DomainModel.PracticeRoom

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add room to treatment</h1>
<hr/>

<div class="card col-md-5">
    <div class="card-body">
<div class="row">
    <div class="col-md-4">
        <form action="@Html.Raw(ViewBag.Url)" method="post" novalidate="novalidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class=" control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Rooms"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="javascript:history.go(-1)">Back</a>
</div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
