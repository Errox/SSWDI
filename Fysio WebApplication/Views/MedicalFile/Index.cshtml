@model IEnumerable<Core.DomainModel.MedicalFile>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">MedicalFiles</h1>
<hr/>
<p>
    </p>

<div class="card">
    <div class="card-body">	
    <div class="text-center">
        <a asp-action="IndexPersonalSupervise">Go to your Supervise files</a> | <a asp-action="IndexPersonalTherapist">Go to your medicalfiles</a>
    </div>
    <div class="text-left">
        <a asp-action="Create" class="btn btn-primary">Create MedicalFile</a> 
    </div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagnosisCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntakeTherapistId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntakeSupervision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfDischarge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagnosisCode)
            </td>
            <td>
                    @Html.Raw(item.IntakeTherapistId.ApplicationUser.FirstName) @Html.Raw(item.IntakeTherapistId.ApplicationUser.SurName)
            </td>
            <td>
                    @Html.Raw(item.IntakeSupervision.ApplicationUser.FirstName) @Html.Raw(item.IntakeSupervision.ApplicationUser.SurName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfDischarge)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id}) 
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
