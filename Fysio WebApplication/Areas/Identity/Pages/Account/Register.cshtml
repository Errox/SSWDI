@page
@model RegisterModel
@{
    ViewData["Title"] = "Register new employee";
}

<h1>@ViewData["Title"]</h1>


<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <h2>Account details.</h2>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" aria-required="true" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <h3>Employee details.</h3>
            <hr />
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SurName"></label>
                <input asp-for="Input.SurName" class="form-control" autocomplete="family-name" aria-required="true" />
                <span asp-validation-for="Input.SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsStudent"></label>
                <input asp-for="Input.IsStudent" class="form-control" onclick="ChangeRegisterNumber()" aria-required="true" />
                <span asp-validation-for="Input.IsStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="RegistrationNumber">BIG Number</label>
                <input asp-for="Input.StudentBIGNumber" class="form-control" autocomplete="registration-number" aria-required="true" />
                <span asp-validation-for="Input.StudentBIGNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        function ChangeRegisterNumber() {
            // Get the checkbox
            var checkBox = document.getElementById("Input_IsStudent");
            // Get the output text
            var text = document.getElementById("RegistrationNumber");
            // If the checkbox is checked, display the output text
            if (checkBox.checked == true) {
                text.textContent = "Student Number";
            } else {
                text.textContent = "BIG Number";
            }
        }
    </script>
}
